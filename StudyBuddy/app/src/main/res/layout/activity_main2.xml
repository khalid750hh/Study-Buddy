<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <ImageButton
        android:id="@+id/imgBtnGroups"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="290dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="70dp"
        app:layout_constraintBottom_toTopOf="@+id/imgBtnProfile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imgBtnUsers"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.499"
        app:srcCompat="@drawable/groups" />

    <ImageButton
        android:id="@+id/imgBtnUsers"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="290dp"
        android:layout_marginEnd="79dp"
        android:layout_marginBottom="70dp"
        app:layout_constraintBottom_toTopOf="@+id/imgBtnTutors"
        app:layout_constraintEnd_toStartOf="@+id/imgBtnGroups"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.499"
        app:srcCompat="@drawable/userslist" />

    <ImageButton
        android:id="@+id/imgBtnTutors"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="79dp"
        android:layout_marginBottom="70dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/imgBtnProfile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgBtnUsers"
        app:srcCompat="@drawable/tutors" />

    <ImageButton
        android:id="@+id/imgBtnProfile"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="71dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imgBtnTutors"
        app:layout_constraintTop_toBottomOf="@+id/imgBtnGroups"
        app:srcCompat="@drawable/profile" />

    <TextView
        android:id="@+id/txtViewUsers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="User list"
        app:layout_constraintBottom_toBottomOf="@+id/imgBtnUsers"
        app:layout_constraintEnd_toEndOf="@+id/imgBtnUsers"
        app:layout_constraintStart_toStartOf="@+id/imgBtnUsers" />

    <TextView
        android:id="@+id/txtViewGroups"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Groups"
        app:layout_constraintBottom_toBottomOf="@+id/imgBtnGroups"
        app:layout_constraintEnd_toEndOf="@+id/imgBtnGroups"
        app:layout_constraintStart_toStartOf="@+id/imgBtnGroups" />

    <TextView
        android:id="@+id/txtViewTutors"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Tutors"
        app:layout_constraintBottom_toBottomOf="@+id/imgBtnTutors"
        app:layout_constraintEnd_toEndOf="@+id/imgBtnTutors"
        app:layout_constraintStart_toStartOf="@+id/imgBtnTutors" />

    <TextView
        android:id="@+id/txtViewProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Profile"
        app:layout_constraintBottom_toBottomOf="@+id/imgBtnProfile"
        app:layout_constraintEnd_toEndOf="@+id/imgBtnProfile"
        app:layout_constraintStart_toStartOf="@+id/imgBtnProfile" />

    <TextView
        android:id="@+id/txtViewWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to Study Buddy!"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/imgBtnGroups"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>